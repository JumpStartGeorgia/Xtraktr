<%-
  model_class = TimeSeriesQuestion
  label_key = "mongoid.attributes.time_series_weight."
  hint_key = "mongoid.hints.time_series_weight."
  a_label_key = "mongoid.attributes.time_series_weight_assignment."
  a_hint_key = "mongoid.hints.time_series_weight_assignment."
-%>

<%= semantic_form_for([@time_series, @weight], url: @is_new == true ? time_series_weights_path(owner_id: @owner) : time_series_weight_path(owner_id: @owner), html: {class: 'tabbed-translation-form'}) do |f| %>
  <%= f.error_messages %>


  <div role="tabpanel" class="tabbed-translation-fields">
    <%
      locales = [I18n.locale]
      locales = @time_series.languages_sorted if @time_series.languages.present?
    %>

    <ul class="nav nav-tabs" role="tablist">
      <%
        default_locale = I18n.locale.to_s
        default_lang = ''
      %>
      <% locales.each_with_index do |locale, index| %>
        <%
          lang = @languages.select{|x| x.locale == locale.to_s}.first
          cls = ''
          if index == 0
            cls = 'class=active'
            default_locale = locale
            default_lang = lang.present? ? lang.name : locale
          end
        %>
        <li role="presentation" <%= cls %> data-locale="<%= locale %>">
          <a href="#<%= locale %>" aria-controls="home" role="tab" data-toggle="tab">
            <% if index == 0 %>
              <span class='glyphicon glyphicon-star' title='<%= t('helpers.default_language') %>'></span>
            <% end %>
            <%= lang.present? ? lang.name : locale %>
          </a>
        </li>
      <% end %>
    </ul>

    <div class="tab-content">
      <% locales.each_with_index do |locale, index| %>
        <%
          cls = ''
          cls = 'in active' if index == 0
        %>

        <div role="tabpanel" class="tab-pane fade <%= cls %>" id="<%= locale %>" data-locale="<%= locale %>">
          <%= f.fields_for :text_translations, OpenStruct.new(f.object.text_translations) do |translation| %>
            <%
              label = t(label_key + 'text')
              hint = t(hint_key + 'text')
              if index > 0
                label << show_default_text(@weight.text_translations[default_locale])
              end
            %>
            <%= translation.input locale, hint: hint, label: label.html_safe %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

  <hr />

  <%= f.inputs do %>

    <p>
      <%= t('.weight_question_explanation') %>
    </p>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :dataset_id, as: :select, collection: @datasets.map{|x| [x.dataset_title, x.dataset_id]}, required: true, hint: t(hint_key + 'dataset_id'), input_html: {class: 'selectpicker-weights', :'data-width' => '72%', :'data-live-search' => true} %>
      </div>
      <div class="col-sm-6">
        <%= f.input :code, as: :select, collection: @questions[@weight.dataset_id.to_s].map{|x| [x.code_with_text, x.original_code]}, hint: t(hint_key + 'code'), input_html: {class: 'selectpicker-weights', :'data-width' => '72%', :'data-live-search' => true} %>
      </div>
    </div>


    <hr />

    <p>
      <%= t('.unique_id_explanation') %>
    </p>

    <table id='time-series-dataset-questions' class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= t(a_label_key + 'dataset_id') %></th>
          <th><%= t(a_label_key + 'code_unique_id') %><abbr title="required">*</abbr><div class="help-inline" title="<%= t(a_hint_key + 'code_unique_id') %>"><div>?</div></div></th>
        </tr>
      </thead>
      <tbody>
        <% @weight.assignments.each_with_index do |dataset_assignment, index| %>
          <%= f.semantic_fields_for :assignments, dataset_assignment do |f_dataset_assignment| %>
            <tr>
              <td>
                <%= dataset_assignment.dataset.title %>
                <%= f_dataset_assignment.input :dataset_id, as: :hidden %>
              </td>
              <td>
                <%= f_dataset_assignment.input :code_unique_id, as: :select, collection: @questions[dataset_assignment.dataset_id.to_s].map{|x| [x.code_with_text, x.original_code]}, include_blank: true, label: false, input_html: {class: 'selectpicker assignment-dataset', :'data-width' => '72%', :'data-live-search' => true} %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <hr />

    <div class="radio_buttons input optional form-group" id="time_series_weight_is_default_input">
      <label class="control-label" for="time_series_weight_is_default"><%= t(label_key + 'is_default') %><div class="help-inline" title="<%= t(hint_key + 'is_default') %>"><div>?</div></div>
      </label>
      <div class="radio">
        <label class="choice" for="time_series_weight_is_default_true">
          <% checked = @weight.is_default? ? 'checked=checked' : '' %>
          <input <%= checked %> id="time_series_weight_is_default_true" name="time_series_weight[is_default]" type="radio" value="true" />
          <%= t('formtastic.yes') %>
        </label>
      </div>
      <div class="radio">
        <label class="choice" for="time_series_weight_is_default_false">
          <% checked = @weight.is_default? ? '' : 'checked=checked' %>
          <input <%= checked %> id="time_series_weight_is_default_false" name="time_series_weight[is_default]" type="radio" value="false" />
          <%= t('formtastic.no') %>
        </label>
      </div>
    </div>

    <div class="radio_buttons input optional form-group" id="time_series_weight_applies_to_all_input">
      <label class="control-label" for="time_series_weight_applies_to_all"><%= t(label_key + 'applies_to_all') %><div class="help-inline" title="<%= t(hint_key + 'applies_to_all') %>"><div>?</div></div>
      </label>
      <div class="radio">
        <label class="choice" for="time_series_weight_applies_to_all_true">
          <% checked = @weight.applies_to_all? ? 'checked=checked' : '' %>
          <input <%= checked %> id="time_series_weight_applies_to_all_true" name="time_series_weight[applies_to_all]" type="radio" value="true" />
          <%= t('formtastic.yes') %>
        </label>
      </div>
      <div class="radio">
        <label class="choice" for="time_series_weight_applies_to_all_false">
          <% checked = @weight.applies_to_all? ? '' : 'checked=checked' %>
          <input <%= checked %> id="time_series_weight_applies_to_all_false" name="time_series_weight[applies_to_all]" type="radio" value="false" />
          <%= t('formtastic.no') %>
        </label>
      </div>
    </div>

    <div id="weight_codes">
      <h3><%= t(label_key + 'codes') %><div class="help-inline" title="<%= t(hint_key + 'codes') %>"><div>?</div></div></h3>
      <table id='time-series-weight-questions' class="table table-striped table-hover table-nonfluid table-centered">
        <thead>
          <tr>
            <th>
              <%= link_to '#', class: 'btn btn-default btn-xs btn-select-all', :'data-state' => 'all' do %>
                <span class="glyphicon glyphicon-ok" title="<%= t('helpers.links.select_all') %>"></span>
              <% end %>
            </th>
            <th><%= model_class.human_attribute_name(:code) %></th>
            <th><%= model_class.human_attribute_name(:text) %></th>
            <th><%= t('.other_weights') %></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>


  <% end %>


  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= f.submit t('helpers.links.reset'), :class => 'btn btn-warning', :type => :reset, :name => :reset %>
    <%= link_to t('helpers.links.cancel'), time_series_weights_path, :class => 'btn btn-warning' %>
  </div>
<% end %>
