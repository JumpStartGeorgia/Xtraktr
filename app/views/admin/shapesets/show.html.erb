<%- model_class = Shapeset -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_shapesets_path, :class => 'btn btn-default'  %>
  <%= link_to image_tag('svg/edit.svg'),
              edit_admin_shapeset_path(@shapeset), 
              :title => t('helpers.links.edit'),
              :class => 'btn btn-edit' %>
  <%= link_to 'X',
              admin_shapeset_path(@shapeset),
              :title => t("helpers.links.destroy"),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' if current_user.role? User::ROLES[:admin] %>
</div>

<p><strong><%= model_class.human_attribute_name(:title) %>:</strong>
<%= @shapeset.title %></p>

<p><strong><%= model_class.human_attribute_name(:source) %>:</strong>
<%= @shapeset.source %></p>

<p><strong><%= model_class.human_attribute_name(:source_url) %>:</strong>
  <%= auto_link(@shapeset.source_url, :html => { :target => '_blank' }) if @shapeset.source_url.present? %>
</p>

<p><strong><%= model_class.human_attribute_name(:description) %>:</strong></p>
<div class="tinymce_format">
  <%= simple_format_no_tags(@shapeset.description, {}, {sanitize: false}) %>
</div>

